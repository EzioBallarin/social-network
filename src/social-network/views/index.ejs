<h1>Social Network</h1>
<% if (locals.session.isLogged) { %>
<div> hello logged in user </div>
<form action="account/logout" method="post" id="ssusn-logout">
    <button type="submit">Logout</button>
</form>
<form action="content" method="post" id="ssusn-new-content">
    <input type="file" name="image"/><br/>
    <input type="submit"/>
</form>
<a href='/subscriptions'>View Subscriptions</a>
<a href='/content'>Create Post</a>
<% } else { %>
<form action="account/login" method="post" id="ssusn-login">
    <label>Email</label>
    <input type="email" name="ssusn_email"/>
    <label>Password</label>
    <input type="password" name="ssusn_password"/>
    <button type="submit">Login</button>
</form>
<a href="account/register" >Register</a>
<% } %>
